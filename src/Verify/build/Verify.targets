<?xml version="1.0" encoding="utf-8"?>
<Project Condition="$(DesignTimeBuild) != true">
  <ItemGroup>

    <VerifyFiles Include="**\*.received.*;**\*.verified.*" >
      <ParentExtension>$(ProjectExt.Replace('proj', ''))</ParentExtension>
    </VerifyFiles>
    <None Update="@(VerifyFiles)">
      <DependentUpon>$(
        [System.String]::Copy('%(FileName)')
        .SubString(
        0,
        $([System.String]::Copy('%(FileName)').IndexOf('.'))
        )
        )%(VerifyFiles.ParentExtension)</DependentUpon>
    </None>
  </ItemGroup>
</Project>