<?xml version="1.0" encoding="utf-8"?>
<Project Condition="$(DesignTimeBuild) != true">
  <ItemGroup>
    <None Update="**\*.received.*;**\*.verified.*">
      <ParentExtension>$(ProjectExt.Replace('proj', ''))</ParentExtension>
      <DotIndex>$([System.String]::Copy('%(FileName)').IndexOf('.'))</DotIndex>

      <DependentUpon>$(
        [System.String]::Copy('%(FileName)')
        .SubString(
        0,
        %(DotIndex)
        )
        )%(ParentExtension)</DependentUpon>
    </None>
  </ItemGroup>
</Project>